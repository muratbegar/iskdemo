{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName",
      "WithProcessId"
    ],
    "Properties": {
      "Application": "ELearning.Platform"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors/elearning-error-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "restrictedToMinimumLevel": "Error",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/elearning-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=elearning_db;Username=postgres;Password=your_password",
    "Redis": "localhost:6379",
    "RabbitMQ": "amqp://guest:guest@localhost:5672/",
    "Seq": "http://localhost:5341",
    "Jaeger": "http://localhost:14268"
  },

  "IskoopElearning": {
    "FileUpload": {
      "MaxFileSizeMB": 100,
      "AllowedExtensions": [
        ".jpg",
        ".jpeg",
        ".png",
        ".gif",
        ".mp4",
        ".mov",
        ".avi",
        ".mkv",
        ".pdf",
        ".doc",
        ".docx",
        ".txt",
        ".mp3",
        ".wav",
        ".m4a"
      ],
      "UploadPath": "uploads"
    },
    "Email": {
      "SmtpServer": "smtp.gmail.com",
      "SmtpPort": 587,
      "Username": "your-email@gmail.com",
      "Password": "your-app-password",
      "FromEmail": "noreply@elearning.com",
      "FromName": "ELearning Platform"
    },
    "Cache": {
      "DefaultDurationMinutes": 30,
      "LongDurationHours": 24,
      "RedisConnectionString": "localhost:6379"
    },
    "Security": {
      "JwtSecretKey": "your-super-secret-jwt-key-min-32-chars",
      "JwtExpirationMinutes": 60,
      "PasswordMinLength": 8,
      "LockoutDurationMinutes": 15
    }
  },

  "OpenTelemetry": {
    "ServiceName": "ELearning.Platform",
    "ServiceVersion": "1.0.0",
    "Exporters": {
      "Otlp": {
        "Endpoint": "http://localhost:4317"
      },
      "Jaeger": {
        "Endpoint": "http://localhost:14268/api/traces"
      }
    }
  },

  "HealthChecks": {
    "UI": {
      "EvaluationTimeInSeconds": 10,
      "MinimumSecondsBetweenFailureNotifications": 60
    }
  },

  "Aspire": {
    "Dashboard": {
      "Otlp": {
        "AuthMode": "Unsecured"
      }
    }
  },

  "AllowedHosts": "*"
}

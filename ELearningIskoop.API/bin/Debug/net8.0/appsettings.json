{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "ElearningIskoop": "Host=localhost;Port=5432;Database=ElearningIskoop;Username=postgres;Password=1234;"
  },
  "AllowedHosts": "*",
  "ELearningIskoop": {
    "FileUpload": {
      "MaxFileSizeMB": 50,
      "AllowedExtensions": [ ".jpg", ".png", ".pdf", ".mp4" ],
      "UploadPath": "uploads"
    },
    "Cache": {
      "DefaultDurationMinutes": 15,
      "LongDurationHours": 12
    },
    "Security": {
      "JwtSecretKey": "development-secret-key-minimum-32-characters-long",
      "JwtExpirationMinutes": 120,
      "PasswordMinLength": 6
    }
  }

}